{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
